tr.main-content(bgcolor='#E6E7E4')
  td.left(valign='top', width='240')
    table
      tbody
        tr
          td.imageContainer
            - if(story.url)
              a(href="#{story.url}", target="_blank")
                img(label='image', src='https://www.dfwworld.org/image/EC_#{ imgURL }.jpg', height='auto', width='240', align='left')
            - else
              img(label='image', src='https://www.dfwworld.org/image/EC_#{ imgURL }.jpg', height='auto', width='240', align='left')
        tr
          td.caption(align='left')
            - if(story.caption)
              p #{ story.caption }
  td.left(valign='top', width='360')
    a(name='toc_item_#{ count }')
    h2 !{ story.title }
    - each paragraph in story.body
      p !{ paragraph }