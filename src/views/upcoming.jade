- var totalUpcomingEvents = data.upcoming.length | 0;
tr.main-container.upcoming(style='height: 300px; margin: 0; padding: 0;')
  - for(var i=0;i<3;i++)
    - var url = (data.upcoming[i].url[0].length > 1) ? data.upcoming[i].url[0] : data.upcoming[i].url;
    if data.upcoming[i].img.indexOf('BC_') > -1
      - var height = 180
    else
      - var height = 120
    td(valign='top', align='center', width='180', height='auto', bgcolor='#f8f8f8', style='margin: auto; padding: 2px; text-align: center;')
      a(href='#{ url }', target='_blank')
        img(alt='#{ data.upcoming[i].speaker || data.upcoming[i].title }', src='https://www.dfwworld.org/image/#{ data.upcoming[i].img }', align='center', border='0', height='{height}', width='120')
      div(style='margin: 0; padding: 0;')
        p(align='center')
          - if (data.upcoming[i].date[0].length > 1)
            span.date #{ dateFormatter(data.upcoming[i].date[0], 'M D') } in&nbsp;
              a(href='#{ url }', target='_blank') Fort Worth
              br
              | #{ dateFormatter(data.upcoming[i].date[1], 'M D') } in&nbsp;
              a(href='#{ data.upcoming[i].url[1] }', target='_blank') Addison
          - else
            span.date #{ dateFormatter(data.upcoming[i].date, 'M D') }
        - if (data.upcoming[i].speaker)
          h2(align='center') !{ data.upcoming[i].speaker }
        h3(align='center')
          a(href='#{ url }', target='_blank') !{ data.upcoming[i].title }
        br
