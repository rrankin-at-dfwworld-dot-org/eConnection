- var totalUpcomingEvents = data.upcoming.length | 0;
tr.main-container(style='height: 300px; margin: 0; padding: 0;')
  - for(var i=0;i<3;i++)
    td(valign='top', align='center', width='180', height='180', bgcolor='#f8f8f8', style='margin: auto; padding: 2px; text-align: center;')
      a(href='#{ data.upcoming[i].url }', target='_blank')
        img(alt='#{ data.upcoming[i].speaker || data.upcoming[i].title }', src='https://www.dfwworld.org/image/#{ data.upcoming[i].img }', align='center', border='0', height='120', width='120')
      div(style='margin: 0; padding: 0;')
        p(align='center')
          span #{ dateFormatter(data.upcoming[i].date, 'M D') }
        h2(align='center') #{ data.upcoming[i].speaker }
        h3(align='center')
          a(href='#{ data.upcoming[i].url }', target='_blank') !{ data.upcoming[i].title }
        br